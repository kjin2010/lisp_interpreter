@media print {
    body * {
        visibility: hidden;
    }

    #content * {
        visibility: visible;
    }

    #content {
        visibility: visible;
        background-color: white;
        position: absolute;
        left:0px;
        top:0px;
    }

    .pagebreak{
        page-break-after: always;
    }

    .noprint{
        display:none;
    }

    .printonly{
        display:inline;
        visibility: visible;
    }

    [id^="queue_"]{
        display:none;
    }

    .question{
        page-break-inside: avoid;
    }

    [id$="_message"]{
        display: none;
    }

